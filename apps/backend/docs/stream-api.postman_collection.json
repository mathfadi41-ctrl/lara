{
  "info": {
    "name": "Stream Pipeline API",
    "description": "Collection for testing the real-time stream pipeline API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000",
      "type": "string"
    },
    {
      "key": "streamId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/streams/health",
          "host": ["{{baseUrl}}"],
          "path": ["streams", "health"]
        }
      }
    },
    {
      "name": "Create Stream",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const response = pm.response.json();",
              "pm.collectionVariables.set('streamId', response.id);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test Camera\",\n  \"rtspUrl\": \"rtsp://host.docker.internal:8554/test\",\n  \"fps\": 5,\n  \"detectionEnabled\": true\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/streams",
          "host": ["{{baseUrl}}"],
          "path": ["streams"]
        }
      }
    },
    {
      "name": "List Streams",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/streams",
          "host": ["{{baseUrl}}"],
          "path": ["streams"]
        }
      }
    },
    {
      "name": "Get Stream",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/streams/{{streamId}}",
          "host": ["{{baseUrl}}"],
          "path": ["streams", "{{streamId}}"]
        }
      }
    },
    {
      "name": "Update Stream",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Updated Camera Name\",\n  \"fps\": 10,\n  \"detectionEnabled\": false\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/streams/{{streamId}}",
          "host": ["{{baseUrl}}"],
          "path": ["streams", "{{streamId}}"]
        }
      }
    },
    {
      "name": "Start Stream",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/streams/{{streamId}}/start",
          "host": ["{{baseUrl}}"],
          "path": ["streams", "{{streamId}}", "start"]
        }
      }
    },
    {
      "name": "Stop Stream",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/streams/{{streamId}}/stop",
          "host": ["{{baseUrl}}"],
          "path": ["streams", "{{streamId}}", "stop"]
        }
      }
    },
    {
      "name": "Delete Stream",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/streams/{{streamId}}",
          "host": ["{{baseUrl}}"],
          "path": ["streams", "{{streamId}}"]
        }
      }
    },
    {
      "name": "Get Recent Detections",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/detections?limit=100",
          "host": ["{{baseUrl}}"],
          "path": ["detections"],
          "query": [
            {
              "key": "limit",
              "value": "100"
            }
          ]
        }
      }
    },
    {
      "name": "Get Stream Detections",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/detections/stream/{{streamId}}?limit=50",
          "host": ["{{baseUrl}}"],
          "path": ["detections", "stream", "{{streamId}}"],
          "query": [
            {
              "key": "limit",
              "value": "50"
            }
          ]
        }
      }
    }
  ]
}
